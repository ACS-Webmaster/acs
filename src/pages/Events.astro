---
import Page from "../layouts/Page.astro"
import svg5 from '../assets/wave-haikei5.svg?raw'
import '../styles/global.css'; 
import EventsCard from "../components/EventsCard";
---

<Page title="Events">
    <div class="bg-[#0057A3]">
        <div class="p-2 text-white text">
            <h1 class="heading text-black">Events</h1>
            <h2 class="heading">Upcoming</h2>
            <div class="grid grid-col1 sm:flex gap-1 mt-2 justify-left">
                <EventsCard events={{
                    date: null,
                    name: 'UH-HEART: Basic scope of cardiovascular research',
                    people: 'AHA',
                    description: 'Click here to apply',
                    details: ['$6,000 stipend and funds to travel to a research conference', 'Rising juniors, seniors, and immediate college graduates', 'Priority Deadline: Sunday, February 23rd; Final Deadline: Sunday, March 9th'],
                    link: "https://ddi.uh.edu/undergraduate-research-programs/uh-heart"
                } }/>
                <EventsCard events={{
                    date: null,
                    name: 'UH-CURE: Broad-range cardiovascular research',
                    people: 'NIH and NHLBI',
                    description: 'Click here to apply',
                    details: ['Any full-time undergraduate student who has completed at least one year of studies', '$6,000 stipend, funds to travel to a research conference, and housing for on-campus stay for the duration of the program', 'Financial assistance for travel if coming from outside of Houston', 'Priority Deadline: Sunday, February 23rd; Final Deadline: Sunday, March 9th'],
                    link: "https://ddi.uh.edu/undergraduate-research-programs/uh-cure"
                } }/>
            </div>
               

           
            <h2 class="heading">Event Sign-Up</h2>
            <!-- <p class="mb-2">no current events for sign up</p> -->
            <div class="grid grid-col1 sm:flex gap-1 mt-2 justify-left">
                <EventsCard events={{
                    date: null,
                    name: 'Graduate School Mentorship Groups',
                    people: 'Society for the Advancement of Chicanos/Hispanics & Native Americans in STEM at UH',
                    description: 'Apply to be mentee',
                    details: ['Get paired with a graduate student in a field of your choice', 'Different levels of mentorship - Ph.D., Masters Thesis & Professional Based, Professional School (Law, Pharma, Dental, etc.)', 'Learn more about the graduate school process and strengthen your application'],
                    link: "https://docs.google.com/forms/d/e/1FAIpQLSfl_Nsh77Zs_bvNAkL0bgWax-xZ0oQrHQNEf63xh6u7HAryZw/viewform"
                } }/>
                <EventsCard events={{
                    date: null,
                    name: 'First Generation Mentorship Groups',
                    people: 'Society for the Advancement of Chicanos/Hispanics & Native Americans in STEM at UH',
                    description: 'Apply to be mentor',
                    details: ['Mentor a first year or incoming NSM student', 'Help new Coogs adjust to UH by guiding mentees in your or a similar degree program about how to succeed in the first year at UH', 'Both programs will involve regular check-ins with your mentor/mentee and lunch meetings (food provided) expected commitment of about 5 hours per month'],
                    link: "https://docs.google.com/forms/d/e/1FAIpQLSdnaw9xCqostaSOGzxcRbHud1L6JKn0pFln33WszQ3TO9KRCg/viewform"
                } }/>
            </div>
            <a href="/Gallery">
                <button class="border-white border-2 w-fit p-2 rounded-lg hover:bg-white hover:text-black duration-300">
                    Past Events
                </button>
             
            </a>

      
        </div>
      
        </div>
        <Fragment set:html={svg5} />


</Page>
